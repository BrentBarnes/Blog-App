
<%= form_with model: @article do |form| %>
  <div class="flex-column space-y-6 bg-white p-10 rounded-3xl shadow-md mb-10">
    <div class="flex-column space-y-1">
      <%= form.label :title, class: "text-4xl" %><br>
      <%= form.text_field :title, class: "bg-lightPink rounded-md p-2" %>
      <% article.errors.full_messages_for(:title).each do |message|%>
        <div><%= message %></div>
      <% end %>
    </div>
    <div class="flex-column space-y-1">
      <%= form.label :body, class: "text-4xl" %><br>
      <%= form.text_area :body, class: "bg-lightPink rounded-md p-2" %>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div  class="flex justify-center bg-brown mt-2 w-60 py-2 px-4 text-white rounded-2xl hover:cursor-pointer hover:bg-lightPink shadow-md">
      <%= form.submit "Update Article", class: "hover:cursor-pointer"  %>
    </div>
  </div>
<% end %>